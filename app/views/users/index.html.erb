<h1>Display All UserS</h1>

<table class="table table-border">
  <thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.firstname %></td>
      <td><%= user.lastname %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'edit', "#", class: "btn btn-primary" %>
        <%= link_to 'Delete', "#", class: "btn btn-danger" %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>
