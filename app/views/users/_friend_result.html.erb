<div class="result-block">
  <%= render 'layouts/messages' %>
</div>
<% if @friends %>
  <div class="card card-header result-block">
    <table>
      <tbody>

    <% @friends.each do |friend| %>
        <tr>

          <td><strong>Name: </strong><%= friend.firstname %> <%= friend.lastname %></td>
          <td><strong>Email: </strong><%= friend.email %></td>
          <td>Action:
            <%= link_to 'Veiw Profile', "#", class: "btn btn-xs btn-success", method: :post %>
            <% if current_user.not_friends_with?(friend.id) %>
              <%= link_to 'Follow User?', friendships_path(friend: friend), class: "btn btn-xs btn-success", method: :post %>
            <% else %>
              <span class="badge badge-seconder"> You are Friends</span>
            <% end %>
          </td>
        </tr>
    <% end %>
      </tbody>
    </table>
  </div>
<% end %>
